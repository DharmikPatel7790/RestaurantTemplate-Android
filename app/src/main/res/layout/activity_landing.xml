<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/img_landing_page"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:paddingTop="@dimen/double_activity_margin"
        android:paddingBottom="@dimen/double_activity_margin"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="@dimen/double_activity_margin"
            android:layout_marginBottom="@dimen/activity_margin"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:id="@+id/title"
            android:text="@string/app_name"
            android:textAllCaps="true"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/grey"
            android:textSize="@dimen/large_text_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/continue_button"
            android:textAllCaps="true"
            android:text="@string/discover_now"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/small_text_1"
            android:textColor="@color/white"
            android:background="@drawable/rounded_side_theme_solid"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_marginBottom="@dimen/double_activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_marginLeft="@dimen/activity_margin"
            android:paddingTop="@dimen/half_activity_margin"
            android:paddingBottom="@dimen/half_activity_margin"
            android:paddingLeft="@dimen/one_half_activity_margin"
            android:paddingRight="@dimen/one_half_activity_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>