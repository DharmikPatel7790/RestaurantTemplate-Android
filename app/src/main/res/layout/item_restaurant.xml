<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/quarter_activity_margin"
    android:paddingRight="@dimen/quarter_activity_margin"
    android:paddingTop="@dimen/half_activity_margin"
    android:paddingBottom="@dimen/half_activity_margin"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:padding="@dimen/quarter_activity_margin"
        android:text="@string/open"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_3"
        android:layout_alignTop="@id/thumbnail"
        android:layout_margin="@dimen/half_activity_margin"
        android:textAllCaps="true"
        android:background="@drawable/rounded_corner_white_solid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="@dimen/quarter_activity_margin"
        android:isIndicator="true"
        android:progressDrawable="@drawable/rating_yellow_selector"
        android:rating="5"
        android:layout_below="@+id/thumbnail"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/review_count"
        android:layout_alignBottom="@id/rating"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="@dimen/small_text_4"
        android:layout_alignTop="@id/rating"
        android:layout_marginLeft="@dimen/half_activity_margin"
        android:fontFamily="sans-serif-thin"
        android:layout_toRightOf="@id/rating"
        android:layout_width="match_parent"
        android:text="486 Reviews"
        android:layout_height="wrap_content" />

    <TextView
        android:lines="1"
        android:id="@+id/name"
        android:ellipsize="end"
        android:textColor="@color/grey"
        android:layout_below="@id/rating"
        android:layout_marginTop="@dimen/half_activity_margin"
        android:fontFamily="sans-serif-medium"
        android:layout_width="match_parent"
        android:textSize="@dimen/small_text_2"
        android:layout_height="wrap_content" />
    <TextView
        android:lines="1"
        android:id="@+id/address"
        android:textColor="@color/light_grey"
        android:ellipsize="end"
        android:layout_below="@id/name"
        android:layout_marginTop="@dimen/half_activity_margin"
        android:fontFamily="sans-serif-light"
        android:layout_width="match_parent"
        android:textSize="@dimen/small_text_2"
        android:layout_height="wrap_content" />

</RelativeLayout>