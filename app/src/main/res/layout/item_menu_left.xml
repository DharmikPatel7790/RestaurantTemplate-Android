<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:layout_marginTop="@dimen/half_activity_margin"
        android:layout_marginLeft="@dimen/activity_margin"
        android:id="@+id/thumbnail"
        android:layout_width="@dimen/menu_image_size"
        android:layout_height="@dimen/menu_image_size" />

    <TextView
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_toRightOf="@id/thumbnail"
        android:id="@+id/name"
        android:lines="1"
        android:ellipsize="end"
        android:text="Char Kway Teow"
        android:textSize="@dimen/small_text_2"
        android:fontFamily="sans-serif-medium"
        android:textColor="@color/grey"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/half_activity_margin"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_below="@id/name"
        android:layout_alignLeft="@id/name"
        android:id="@+id/price"
        android:layout_marginTop="@dimen/quarter_activity_margin"
        android:textSize="@dimen/small_text_2"
        android:text="RM 22.90"
        android:lines="1"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_below="@id/price"
        android:id="@+id/ingredient"
        android:layout_alignLeft="@id/name"
        android:layout_marginTop="@dimen/quarter_activity_margin"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed ut risus facilisis, auctor nulla quis, lobortis justo. Donec porta hendrerit nisi non aliquet. Phasellus enim tortor, ultricies vel risus et, tin"
        android:textSize="@dimen/small_text_4"
        android:lines="2"
        android:ellipsize="end"
        android:textColor="@color/extra_light_grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:alpha="0.3"
        android:background="@color/extra_light_grey"
        android:layout_below="@id/thumbnail"
        android:layout_marginTop="@dimen/half_activity_margin"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>